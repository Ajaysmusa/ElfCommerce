{
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": ["airbnb", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "indent": [2, 2],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": [
        "error",
        "always"
    ],
    "prettier/prettier": ["error", { "singleQuote": true }],
    "class-methods-use-this": 0,
    "import/no-named-as-default": 0,
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [".js"]
      }
    ]
  }
}